- render 'default' do
  %article
    %header
      %h1 #{item[:title]}
      - if item[:subtitle]
        %p #{item[:subtitle]}
      %time{:pubdate => true, :datetime => pub_datetime(item)}
        = pretty_date(item)
    %main
      = find_and_preserve(yield)
    %footer
      .twitter_image_text
        %a{:href => tweet_this_url(item), :target => '_blank'}
          %img{:src => '/assets/twitter-bird-light-bgs.png', :width => '32'}
          Tweet This
      .copyright
        <a rel="license" href="http://creativecommons.org/licenses/by-sa/4.0/"><img alt="Creative Commons License" style="border-width:0" src="http://i.creativecommons.org/l/by-sa/4.0/88x31.png" /></a><br /><span xmlns:dct="http://purl.org/dc/terms/" property="dct:title">#{item[:title]}</span> by <a xmlns:cc="http://creativecommons.org/ns#" href="#{url_for(item)}" property="cc:attributionName" rel="cc:attributionURL">#{config[:author_name]}</a> is licensed under a <a rel="license" href="http://creativecommons.org/licenses/by-sa/4.0/">Creative Commons Attribution-ShareAlike 4.0 International License</a>.
      = render 'comments'
      = render 'comment_form', :blurb => @items.select{ |i| i.identifier == '/comment_blurb/' }.first
