- render 'default' do
  %article
    %header
      %h1 #{item[:title]}
      %p
        Published 
        %time{:pubdate => true, :datetime => "#{item[:created_at]}"}
          = get_pretty_date(item)
    = find_and_preserve(yield)
    %footer
      .twitter_image_text
        %a{:href => tweet_this_url(item), :target => '_blank'}
          %img{:src => '/assets/twitter-bird-light-bgs.png', :width => '32'}
          Tweet This
        #comments
          - comments = comments_for_post(item)
          - count_line = "#{comments.length} comments on #{item[:title]}"
          = count_line
          - comments.each do | comment |
            %article.comment
              %header
                .vcard
                  %span.photo
                    = comment['gravatar_image']
                  %span.fn
                    = comment['author']
                  on 
                  %time{:pubdate => true, :datetime => "#{comment['created_at']}"}
                    = attribute_to_time(comment['created_at']).strftime('%B %-d, %Y at %l:%M %P')
                  said: 
              = Kramdown::Document.new(comment['comment']).to_html

        #comment_form
          %form{:name=> 'comments', :method => 'POST', :action => "#{@config['action_url']}/assets/commentsubmit.php"}
            %h1
              Leave a Comment
            %input{:type => 'hidden', :name => 'post_id', :value => "#{item.identifier}"}
            %input{:type => 'hidden', :name => 'return_url', :value => "#{url_for(item)}"}
            %fieldset
              %ol
                %li
                  %label{:for => "name"} Name:
                  %input{:type => "text", :name => "name", :class => "text"}
                %li
                  %label{:for => "mail"} E-Mail:
                  %input{:type => "text", :name => "mail", :class => "text"}
                %li
                  %label{:for => "comment"} Message:
                  %textarea{:name => "comment"}
              %input{:type => "submit", :value => "Send", :class => "button"}
